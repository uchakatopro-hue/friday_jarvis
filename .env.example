# ============================================================================
# Friday AI Voice Assistant - Environment Configuration Example
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control - add it to .gitignore
# ============================================================================

# ============================================================================
# LIVEKIT CONFIGURATION
# ============================================================================
# LiveKit Cloud or self-hosted server URL
LIVEKIT_URL=wss://your-livekit-server.cloud

# LiveKit API credentials (from https://cloud.livekit.io/)
LIVEKIT_API_KEY=APIxxxxxxxxxxxxx
LIVEKIT_API_SECRET=your-api-secret-key

# ============================================================================
# GOOGLE OAUTH2 CONFIGURATION (for Gmail)
# ============================================================================
# From Google Cloud Console OAuth2 credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_API_KEY=your-api-key

# Gmail user email
GMAIL_USER=your-email@gmail.com

# Refresh token (obtain by running get_google_refresh_token.py)
# See: https://developers.google.com/identity/protocols/oauth2
GOOGLE_REFRESH_TOKEN=1//your-refresh-token-here

# Email sender name
FROM_NAME=Friday AI Assistant

# ============================================================================
# FASTAPI & AGENT CONFIGURATION
# ============================================================================
# Agent identification
AGENT_NAME=Friday

# Enable agent to call external APIs
ENABLE_EXTERNAL_API_CALLS=true

# Agent session timeout in seconds (default: 300 = 5 minutes)
AGENT_SESSION_TIMEOUT=300

# Internal FastAPI server configuration
INTERNAL_API_URL=http://localhost:8000
INTERNAL_API_TOKEN=your-secure-random-token-here

# Server port (used by uvicorn)
PORT=7860

# HTTP client timeout in seconds
HTTP_TIMEOUT_SECONDS=30

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Comma-separated list of allowed origins for CORS
# Examples: http://localhost:3000,http://localhost:7860,https://your-domain.com
# In production, specify only trusted domains
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:7860,http://localhost:8000

# ============================================================================
# EXTERNAL API INTEGRATIONS (Optional)
# ============================================================================
# CRM Service API (e.g., Salesforce, HubSpot)
CRM_API_URL=https://api.crm-service.com
CRM_API_KEY=your-crm-api-key

# Database Service API
DATABASE_API_URL=https://api.database-service.com
DATABASE_API_KEY=your-database-api-key

# AI Tools API (e.g., OpenAI, Hugging Face)
AI_TOOLS_API_URL=https://api.ai-tools.com
AI_TOOLS_API_KEY=your-ai-tools-api-key

# ============================================================================
# SECURITY & WEBHOOKS
# ============================================================================
# Secret key for webhook request signature verification
WEBHOOK_SECRET=your-webhook-secret-key

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable detailed request/response logging
DEBUG_MODE=false

# ============================================================================
# OPTIONAL FEATURES
# ============================================================================
# Enable voice activity detection
ENABLE_VAD=true

# Maximum message length for agent (in characters)
MAX_MESSAGE_LENGTH=2000

# Address for Mem0 (optional memory service)
MEM0_API_KEY=your-mem0-api-key
